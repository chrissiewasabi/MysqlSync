<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rockstar.classproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Holo.Base.Theme" >
        <activity
            android:name="com.rockstar.classproject.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:theme="@style/Theme.AndroidDevelopers" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rockstar.classproject.ShowStudents"
            android:label="@string/title_activity_show_students"
            android:theme="@style/Theme.AndroidDevelopers" >
        </activity>
        <activity
            android:name="com.rockstar.classproject.StudentActivity"
            android:label="@string/title_activity_student"
               android:theme="@style/Theme.AndroidDevelopers"  >
        </activity>
    </application>

</manifest>